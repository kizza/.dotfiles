[alias]
  # Logs
  l = log --color --graph --pretty=format:'%C(magenta)%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(italic blue)%an%Creset' --abbrev-commit
  ll = log --pretty=format:"%C(cyan)%h%Creset %an, %C(yellow)%ar: %C(Green)%s" --stat
  l1 = !git l -n 1
  l2 = !git l -n 2
  l3 = !git l -n 3
  l4 = !git l -n 4
  l5 = !git l -n 5
  l10 = !git l -n 10
  l15 = !git l -n 15
  l20 = !git l -n 20
  l25 = !git l -n 25
  latest = log -n 1

  # Shortcuts
  abort = rebase --abort
  add = add -A
  amend = commit --amend --no-edit
  br = branch
  ch = checkout
  cm = commit
  continue = rebase --continue
  current = branch --show-current
  d = diff
  discard = checkout --
  discardp = checkout -p --
  files = diff-tree --no-commit-id --name-only -r
  fixup = commit --fixup
  main = checkout master
  master = checkout master
  pl = pull --rebase
  pu = push
  rollback = "!git show -s --format=%B | pbcopy && git reset HEAD~"
  s = status
  unstage = reset HEAD
  unstash = stash pop
  wipe = reset --hard HEAD

  # list aliases
  la = "!git config -l | grep alias | cut -c 7-"

  # reset diff of file modes (will claim "bad input" if there are no diffs found)
  permission-reset = !git diff -p -R --no-color | grep -E \"^(diff|(old|new) mode)\" --color=never | git apply
