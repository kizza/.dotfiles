#!/usr/bin/env zsh

# git@github.com:user/repo.git
ROOT=$(git config --get remote.origin.url)

# user/repo.git
TAIL=${ROOT/#git@github\.com:/}

# user/repo
SLUG=${TAIL/%\.git/}

# main/master
TRUNK=$(trunk)

LINE="L$2"
[ -n "$3" ]; LINE="L$2-L$3"

URL="https://github.com/$SLUG/tree/$TRUNK/$1#$LINE"
open $URL
