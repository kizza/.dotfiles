#!/usr/bin/env bash

tmux rename-session "EGR"
tmux rename-window "Backend"

tmux send-keys 'clear' C-m
tmux send-keys 'cd ~/Code/egr/marketing-sites/rolltrac' C-m
tmux send-keys 'yarn start' C-m

tmux splitw -h
tmux send-keys 'clear' C-m
tmux send-keys 'cd ~/Code/egr/marketing-sites/rolltrac' C-m
tmux send-keys 'yarn watch' C-m

tmux new-window
tmux send-keys 'clear' C-m
tmux send-keys 'cd ~/Code/egr/marketing-sites/rolltrac' C-m
tmux send-keys 'v .' C-m
