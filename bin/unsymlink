#!/usr/bin/env zsh

target=$1

if [ -z "$target" ]; then
  echo "No path provided ðŸ¤”"
  exit 1
fi

if [ ! -L "$target" ]; then
  echo "It's already local ðŸ’¡"
  exit 1
fi

heading "Decouple $target?"
echo "This will unlink it from it's upstream and leave it local"
echo -n "Would you like to continue? (y/n) " && read response

if [[ "$response" =~ ^[Yy]$ ]]; then
  echo "Ok"
  tmp=$(mktemp)
  cp "$target" "$tmp" && rm "$target" && mv "$tmp" "$target"
  donetick "Done. It's now local âœ¨"
else
  echo "Sure thing. Nothing touched ðŸ‘Œ"
fi

